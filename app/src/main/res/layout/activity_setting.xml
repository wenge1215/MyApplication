<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="功率（dBm）："

            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/iv_setting_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/button_minus"/>
        <EditText
            android:id="@+id/et_setting_power"
            android:numeric="integer"
            android:gravity="center"
            android:layout_width="80dp"
            android:focusable="false"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_setting_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/button_add"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="数据区：" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="访问密码：" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:id="@+id/LinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Spinner
            android:id="@+id/spinner_membank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <EditText
            android:id="@+id/et_setting_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:text="00000000"
            android:singleLine="true"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:id="@+id/LinearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="18sp"
            android:text="起始地址" />
        <EditText
            android:gravity="center"
            android:id="@+id/et_setting_addr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="2"
            android:singleLine="true"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textSize="18sp"
            android:text="长度（word）" />
        <EditText
            android:gravity="center"
            android:id="@+id/et_setting_length"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:singleLine="true"
            android:inputType="number"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        >
        <Button
            android:id="@+id/bit_setting_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="保存"/>
        <Button
            android:id="@+id/btn_setting_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"/>
    </LinearLayout>
</LinearLayout>