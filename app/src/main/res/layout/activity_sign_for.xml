<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <com.innolux.widget.NavigationBar
        android:id="@id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.innolux.widget.NavigationBar>

  <LinearLayout
      android:padding="10dp"
      android:layout_marginTop="30dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
     <LinearLayout
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="wrap_content"
         android:gravity="center">
         <TextView
             android:id="@+id/station_sign_for"
             android:drawableTop="@mipmap/station_sign_for"
             android:text="工位签收"
            style="@style/PutawayTextSty"/>
     </LinearLayout>
      <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="1"
          android:gravity="center"
          android:layout_height="wrap_content">
          <TextView
              android:drawableTop="@mipmap/manage_sign_for"
              android:text="组立签收"
              android:id="@+id/manage_sign_for"
              style="@style/PutawayTextSty"/>
      </LinearLayout>
  </LinearLayout>
</LinearLayout>